{
  "private": true,
  "dependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.1"
  },
  "devDependencies": {
    "@phorbas/opaque": "file:..",
    "@phorbas/store": "^0.1.1",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "cbor-codec": "^0.2.2",
    "rollup": "^2.6.1",
    "rollup-plugin-jsy": "^1.6.4",
    "u8-utils": "^0.3.7"
  },
  "scripts": {
    "prebuild": "test -d ./node_modules || npm -s install",
    "build": "rollup --config",
    "clean": "rm ./__unittest.*",
    "watch": "npm -s run build -- --watch",
    "pretest": "npm -s run build",
    "test": "npm -s run test:one",
    "test:one": "NODE_OPTIONS=--enable-source-maps  mocha ./__unittest.cjs.js",
    "test:min": "NODE_OPTIONS=--enable-source-maps  mocha --reporter=min ./__unittest.cjs.js"
  }
}
